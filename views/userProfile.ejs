<% include ./partials/header %>
<div class="col-lg-12">

    <div class="card hovercard">
        <img src="https://cdn.pixabay.com/photo/2017/03/31/17/44/avatar-2191932__340.png" alt="" style="border-radius:50%;">
        <div class="card-info" style="color:black; margin:20px 20px; font-size: 20px;">
                <span class="card-title"><%=currentUser.username%></span>
                <p>
                    <span class="glyphicon glyphicon-star"></span> Software Developer <span class="glyphicon glyphicon-star"></span>
                </p>
        </div>
    </div>
  
    <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group">
            <div class="btn-group" role="group">
                    <button type="button" class="btn btn-primary" href="#tab1" data-toggle="tab" >
                        <i class="fa fa-cutlery" aria-hidden=true ></i>
                        <div class="hidden-xs">Yemekler</div>
                    </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" href="#tab2" data-toggle="tab" >
                    <i class="fa fa-cutlery" aria-hidden=true ></i>
                    <div class="hidden-xs">Favoriler</div>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" href="#tab3" data-toggle="tab" >
                    <i class="fa fa-cutlery" aria-hidden=true ></i>
                    <div class="hidden-xs">Takiptekinler</div>
                </button>
            </div>        
    </div>
    <div class="well">
         <div class="tab-content">
            <div class="tab-pane fade in active" id="tab1">
                <h1 style="text-align:center;">Yemekler</h1>
                <div class="row">
                    <% yemekler.forEach(function(yemek){%>
                       <%if(yemek.olusturan.id==currentUser.id) {%>
                        <div class="col-md-3 col-sm-6">
                            <div class="thumbnail">
                                <img src="<%=yemek.resim %>" alt="">
                                <div class="caption text-center">
                                    <h3><%=yemek.adi %></h3>
                                    <p>
                                        <a href="/yemekler/<%=yemek._id %>" class="btn btn-default">Daha Ayrıntılı Bilgi</a>
                                    </p>
                                </div>
                            </div>                        
                        </div>
                        <%} %>
                    <% })%>
                
            </div>        
            <div class="tab-pane fade in " id="tab2" style="height:300px;">
                    <h3>Tab2 böyledir</h3>
            </div>        
            <div class="tab-pane fade in " id="tab3" style="height:300px;">
                    <h3>Tab3 Niçin tab kullanılır</h3>
            </div>            
         </div>
    </div>


</div>

 </body>
 <script src="http://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
 <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
 <script>
     $(document).ready(function () {
         $(".btn-pref .btn").click(function () {
             console.log("basıldı");
             $(".btn-pref .btn").removeClass("btn-primary").addClass("btn-default");
             $(this).removeClass("btn-default").addClass("btn-primary");
         });
     });
 </script>
</html>

